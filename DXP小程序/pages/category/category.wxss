/* pages/category/category.wxss */
.section{ 
  position: absolute; 
  width: 100%; 
  height: 100%; 
  overflow: hidden;
  }
.cate-head{
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  position: relative;
}
.cate-head::before{
  content: '';
  width: 100%;
  height: 2rpx;
  background: #dcdcdc;
  position: absolute;
  left: 0;
  bottom: 0;
}
.cate-text{
  background: #f3f3f3;
  height: 70rpx;
  border-radius: 8rpx;
  margin: 10rpx 20rpx;
  color: #666;
  line-height: 70rpx;
  font-size: 30rpx;
  
}
.cate-text .icon{
  display: block;
  padding: 10rpx;
  float: left;
}
.left{ 
  position: absolute; 
  left: 0; 
  top: 90rpx; 
  height: 100%; 
  width: 90px; 
  background: #FFF; 
  text-align: center;
  font-size:28rpx;
  }
.left view{ 
  display: block; 
  height: 45px; 
  line-height: 45px; 
  border-left: 3px solid #fff;
  }
.left .currType{
  color:#a78c66;
  border-left: 3px solid #a78c66;
}

.right{ 
  margin-left: 90px; 
  height: 100%; 
  overflow: hidden; 
  width: auto;
  background: #fff;
  position:relative;
  }
.right::after{
  position: absolute;
  top:0;
  left: 0;
  content: '';
  width: 1rpx;
  height: 100%;
  background: #dcdcdc;
}  
.right text{ 
  font-size: 15px
  }
.typeTree{
  width: 100%;
  }
.typeTree .item{  
  text-align: center; 
  display: inline-block; 
  vertical-align: top;
  }
.typeTree .brand,
.typeTree .category{ 
  flex-wrap: wrap; 
  overflow: hidden;
  display: inline-block;
  width: 40%;
  margin-left: 6%;
  }
.typeTree .title{ 
  padding: 10px 0; 
  display: block; 
  color: #333;
  }
.typeTree image { 
  width: 100px; 
  margin: 0 auto;
  border:none;
  }
.typeTree .brand image{ 
  height: 100px;
  border:none;
  }
.typeTree .category image{ 
  height: 85px;
  border:none;
  }
.typeTree .category{ 
  padding-bottom: 10px;
  }
.item text{ 
  padding-bottom: 10px; 
  display: block;
  }

.cateBanner{
  padding: 20rpx;
  overflow: hidden;
}
.cateBanner image{
  display: block;
  width: 100%;
  height: 200rpx;
  border:none;
}
.cartItem{
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.cartText{
  width: 33.3%;
}
.cartText image{
  display: block;
  width: 144rpx;
  height: 144rpx;
  border:none;
}
.cartText .cartName{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
}

























