/* pages/cart/cart.wxss */
.cart{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.notData{
  display: flex;
  flex-direction: row;
  padding: 48% 60rpx 0;
}
.notData image{
  display: block;
  width: 200rpx;
  height: 200rpx;
}
.notData-item{
  width: 400rpx;
  padding-left: 40rpx;
}
.notData-text{
  display: block;
  width: 100%;
  color: #333;
  font-size: 33rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.notData-btn{
  display: block;
  width: 150rpx;
  color: #FFF;
  font-size: 30rpx;
  background: #dcb87f;
  height: 70rpx;
  line-height: 25rpx;
  text-align: center;
  border-radius: 8rpx;
}
.cartItem{
  width: 100%;
  overflow: hidden;
}
.cartItem-head{
  width: 100%;
  height: 90rpx;
  color: #333;
  line-height: 90rpx;
  text-align: center;
  border-bottom: 1px #f0f0f0 solid;
  position: fixed;
  left: 0;
  top: 0;
  background: #FFF;
  z-index: 100;
}
.cartItem-head .name{
    font-size: 33rpx;
}
.cartItem-head .edit{
  width: 60rpx;
  height: 90rpx;
  line-height: 95rpx;
  text-align: center;
  position: absolute;
  right: 10rpx;
  top: 0;
  font-size: 30rpx;
}
.cartList{
  width: 100%;
  overflow: hidden;
  padding: 90rpx 0;
  background: #fff;
}
.cartList scroll-view{
  background: #f0f0f0;
}
.cartList-li{
  width: 100%;
  overflow: hidden;
  background: #FFF;
  margin-bottom: 20rpx;
}
.cartList-li-head,.cartList-li-center{
  padding: 0 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.cartList-li-head icon,.cartList-li-center icon{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-right: 15rpx;
}
.cartList-li-head text{
  display: block;
  width: 620rpx;
  height: 90rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cartList-li-center{
  border-top: 1px solid #f5f5f5;
  padding: 20rpx;
}
.cartList-li-center icon{
  margin-top: 80rpx;
}
.cartList-li-center-text{
  display: flex;
  flex-direction: row;
}
.cartList-li-center-text image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.cartList-li-text{
  width: 480rpx;
  overflow: hidden;
}
.cartList-li-text .name{
  display: block;
  padding-right: 20rpx;
  height: 60rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cartList-li-text .title{
  display: block;
  padding-right: 20rpx;
  height: 50rpx;
  color: #999;
  font-size: 28rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cartList-li-text-item{
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.cartList-li-item-price{
  display: block;
  width: 200rpx;
  color: #b4282d;
  font-size: 33rpx;
  height: 60rpx;
  line-height: 80rpx;
}

.cartList-li-item-box{
  width: 240rpx;
  height: 70rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.cartList-li-item-box button{
  display: block;
  padding: 0;
  width: 240rpx;
  height: 70rpx;
  text-align: center;
  background: #FFF;
  border-radius: 0px;
  font-weight: bold;
  font-size: 34rpx;
  line-height: 70rpx;
  border: 1px solid #c7c7c7;
}
.cartList-li-item-box button.disabled{
  background: #f0f0f0;
  color: #999;
}
.cartList-li-item-box button::after{
  border: none;
}
.cartList-li-item-box input{
  display: 60rpx;
  height: 66rpx;
  text-align: center;
  font-size: 30rpx;
  border-top: 1px solid #c7c7c7;
  border-bottom: 1px solid #c7c7c7;
}
.cartItem-foot{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  text-align:center;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  background: #FFF;
  z-index: 100;
}
.cartItem-foot-check{
  width: 30%;
  font-size: 28rpx;
  border-top: 1px solid #f0f0f0;
  display: flex;
  flex-direction: row;
}
.cartItem-foot-check icon{
  display:block;
  margin:20rpx 10rpx 0 20rpx;
}
.cartItem-foot-check text{
  display:block;
}
.cartItem-foot-text{
  width: 40%;
  font-size: 28rpx;
  border-top: 1px solid #f0f0f0;
}
.cartItem-foot-text text{
  color: #b4282d;
  font-size: 33rpx;
}
.cartItem-foot-acco{
  width: 30%;
  color: #fff;
  background: #b4282d;
  border-top: 1px solid #b4282d;
}
.cartList-li-item-del{
  width: 120rpx;
  font-size: 30rpx;
  height: 60rpx;
  color: #b4282d;
  line-height: 60rpx;
  margin-left: 120rpx;
  text-align: center;
}
.cartItem-foot-acco.disabled{
  background: #f0f0f0;
  border-top:1px solid #f0f0f0;
}


