/* pages/search.wxss */
.search{
  height: 100%;
  overflow: hidden;
  border-bottom: 1px solid #f0f0f0;
}
.searchItem{
  margin: 20rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
}
.search-icon{
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.search-box{
  display: block;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
}
.search-box input{
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 30rpx;
  padding-left: 20rpx;
}
.search-text{
  display: block;
  width: 120rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 34rpx;
}



















