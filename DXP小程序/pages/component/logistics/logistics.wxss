/* pages/component/logistics/logistics.wxss */
.logistics{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.logistics-nav{
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
  display: flex;
  flex-direction: row;
  background: #FFF;
  border-bottom: 1px solid #f0f0f0;
}
.logistics-tab{
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  width: 30%;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 2px solid #fff;
}
.logistics-tab.active{
  color: #a78c66;
  border-bottom: 2px solid #a78c66;
}
.logistics-item{
  width: 100%;
  padding-top: 90rpx;
  overflow: hidden;
}
.logistics-list{
  background: #f0f0f0;
}


.comOrderCenter-li{
  padding: 20rpx;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
}
.comOrderCenter-li image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  float: left;
  border-radius: 8rpx;
}
.comOrderCenter-text{
  overflow: hidden;
  padding-left: 10rpx;
}
.comOrderCenter-names{
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.comOrderCenter-title{
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 28rpx;
  overflow: hidden;
}
.comOrderCenter-txt{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.comOrderCenter-price{
  color: #b4282d;
  font-size: 33rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.comOrderCenter-num{
  color: #333;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.logistics-text{
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
  background: #FFF;
}
.logistics-text-li{
  padding:10rpx 20rpx 20rpx 80rpx;
  position: relative;
}
.logistics-text-title{
  display: block;
  color: #666;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.logistics-text-time{
  display: block;
  color: #999;
  font-size: 25rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.logistics-text-li::before{
  content: '';
  width: 1px;
  height: 140rpx;
  background: #ddd;
  position: absolute;
  left: 38rpx;
  top: 50rpx;
}
.logistics-text-li::after{
  content: '';
  width: 25rpx;
  height: 25rpx;
  background: #ddd;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  left: 28rpx;
  top: 23rpx;
}
.logistics-text-li:nth-child(1) .logistics-text-title{
  color: #83c44e;
}
.logistics-text-li:nth-child(1)::after{
  width: 30rpx;
  height: 30rpx;
  left: 25rpx;
  background: #83c44e;
}
.logistics-list.show{
  display: block;
}
.logistics-list.hide{
  display: none;
}