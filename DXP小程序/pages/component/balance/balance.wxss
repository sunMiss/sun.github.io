/* pages/component/balance/balance.wxss */
.balance{
  width: 100%;
  overflow: hidden;
}
.balance-item{
  width: 100%;
  height: 450rpx;
  position: relative;
}
.balance-bg{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.balance-title{
  padding-right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  color: #333;
  font-size: 30rpx;
}
.balance-box{
  width: 100%;
  height: 200rpx;
  overflow: hidden;
  margin-top: 100rpx;
  text-align: center;
}
.balance-box-price{
  display: block;
  color: #333;
  font-size: 45rpx;
  font-weight: 600;
}
.balance-box-text{
  margin-top: 5rpx;
  display: block;
  color: #666;
  font-size: 28rpx;
}
.balance-btn{
  margin: 100rpx 30rpx 0;
  overflow: hidden;
}
.balance-btn button{
  border: 1px solid #666;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 50rpx;
  background: #FFF;
}
.balance-btn button.balance-btn-ok{
  color: #FFF;
  background: #f5d8a3;
  border: 1px solid #f5d8a3;
}









































