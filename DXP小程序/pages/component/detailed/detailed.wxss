/* pages/component/detailed/detailed.wxss */
.detailed{
  width: 100%;
  overflow: hidden;
  background: #F0F0F0;
}
.detailed-li{
  width: 100%;
  padding: 20rpx 0;
  overflow: hidden;
  margin-bottom: 20rpx;
  background: #FFF;
}
.detailed-header,.detailed-center,.detailed-footer{
  padding: 0 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.detailed-header-name,.detailed-header-price{
  color: #333;
  font-size: 32rpx;
}
.detailed-center-data,.detailed-center-price,.detailed-footer-num{
  color: #999;
  font-size: 26rpx;
}
.notDetailed{
  width: 100%;
  overflow: hidden;
  background: #FFF;
}
.notDetailed image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin:48% auto 10rpx;
}
.notDetailed text{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}