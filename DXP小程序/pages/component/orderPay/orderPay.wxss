/* pages/component/orderPay/orderPay.wxss */
.orderPay{
  width: 100%;
  overflow: hidden;
  background:#f0f0f0;
}
.orderPay-list{
  padding: 0 30rpx;
  overflow: hidden;
  background: #FFF;
  margin-bottom: 20rpx;
}
.orderPay-list-li{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 30rpx;
  border-top:1px solid #f5f5f5;
}
.orderPay-item{
  padding: 0 30rpx;
  overflow: hidden;
  background: #FFF;
}
.orderPay-item-li{
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom:1px solid #f5f5f5;
}
.orderPay-li-text{
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.orderPay-li-text image{
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin-top: 10rpx;
}
.orderPay-li-text text{
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  vertical-align: middle;
}
.orderPay-item-li icon{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
}
.orderPay-btn{
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.orderPay-btn-text{
  width: 70%;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 30rpx;
  text-indent: 20rpx;
  border-top:1px solid #f5f5f5;
}
.orderPay-btn-text text{
  color: #b4282d;
  font-size: 33rpx;
}
.orderPay-btn-submit{
  width: 30%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  background: #b4282d;
  border-top:1px solid #b4282d;
}






















