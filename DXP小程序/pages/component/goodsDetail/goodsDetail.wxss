/* pages/component/goodsDetail/goodsDetail.wxss */
@import "../../tpls/products/products-tpl.wxss";


.goodsDetail{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #F0F0F0;
}
swiper-item{
  width: 100%;
  overflow: hidden;
}
swiper{
  height: 600rpx;
}
swiper-item image{
  display: block;
  width: 750rpx;
  overflow: hidden;
}
.goodsSku{
  width: 100%;
  overflow: hidden;
}
.goodsSku-item{
  padding: 30rpx;
  overflow: hidden;
  background: #FFF;
}
.goodsSku-name{
  overflow: hidden;
}
.goodsSku-name-shop{
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-size: 34rpx;
}
.goodsSku-name-title{
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 28rpx;
}
.goodsSku-number{
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.goodsSku-price{
  overflow: hidden;
}
.goodsSku-new{
  color: #b4282d;
  font-size: 35rpx;
}
.goodsSku-old{
  color: #999;
  font-size: 30rpx;
  margin-left: 20rpx;
  text-decoration:line-through; 
}
.goodsSku-num{
  color: #999;
  font-size: 30rpx;
}
.goodsSku-section{
  overflow: hidden;
  background: #FFF;
  margin-top: 20rpx;
}
.goodsSku-section-1{
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.goodsSku-section-2{
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 30rpx;
}
.goodsItem{
  width: 100%;
  overflow: hidden;
  background: #FFF;
  margin-top: 20rpx;
}



.goodsItem-image{
  width: 100%;
  overflow: hidden;
}
.goodsItem-image image{
  display: block;
  overflow: hidden;
  width: 750rpx;
}
.goodsLists{
  width: 100%;
  overflow: hidden;
  background: #FFF;
  margin-bottom: 100rpx;
}
.goodsLists-name{
  width: 200rpx;
  margin: auto;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  position: relative;
}
.goodsLists-name::after{
  content: '';
  width: 60rpx;
  height: 1rpx;
  background: #666;
  position: absolute;
  top: 45rpx;
  left: -50rpx;
}
.goodsLists-name::before{
  content: '';
  width: 60rpx;
  height: 1rpx;
  background: #666;
  position: absolute;
  top: 45rpx;
  right: -50rpx;
}
.goodsButton{
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: -1rpx;
  z-index: 100;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  text-align: center;
  background: #FFF;
  border-bottom: 1px solid #f5f5f5;
}
.goodsTo-home{
  width: 20%;
  color: #666;
  font-size: 25rpx;
  border-top:1px solid #c7c7c7;
}
.goodsTo-home image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin:10rpx auto 0;
}
.goodsTo-cart{
  width: 20%;
  color: #666;
  font-size: 25rpx;
  border-top:1px solid #c7c7c7;
  border-left: 1px solid #c7c7c7;
}
.goodsTo-cart image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin:10rpx auto 0;
}
.goodsTo-addcart{
  width: 30%;
  color: #fff;
  line-height: 100rpx;
  background: #dcb87f;
  border-top:1px solid #dcb87f;
}
.goodsTo-buy{
  width: 30%;
  color: #FFF;
  line-height: 100rpx;
  background: #b4282d;
  border-top:1px solid #b4282d;
}
.goodsSku-param{
  width: 100%;
  height: auto;
  background: #FFF;
  position: fixed;
  left: 0;
  bottom: 0px;
  z-index: 210;
  border-top: 1px solid #F0F0F0;
  transform: translateY(150%);
  transition: all 0.4s ease;
}
.dialog__show{
  transform: translateY(0);
}
.goodsParam{
  padding: 30rpx;
  overflow: hidden;
}
.goodsParam image{
  display: block;
  width: 180rpx;
  height: 180rpx;
  float: left;
  border-radius: 8rpx;
}
.goodsParam-item{
  margin-left: 200rpx;
  overflow: hidden;
}
.goodsParam-name{
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goodsParam-title{
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goodsParam-price{
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  color: #b4282d;
  font-size: 34rpx;
}
.goodsContainer{
  width: 100%;
  max-height: 400rpx;
  overflow:auto;
}
.goodsCon-item{
  padding: 0 30rpx;
  overflow: hidden;
}
.goodsCon-title,.goodsNum-text{
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 30rpx;
}
.goodsCon-box{
  overflow: hidden;
  display: flex;
  flex-flow: wrap;
}
.goodsCon-li{
  padding: 12rpx 30rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  border: 1px solid #c7c7c7;
  border-radius: 5rpx;
  margin: 0 20rpx 20rpx 0;
}
.goodsCon-li.active{
  color: #b4282d;
  border: 1px solid #b4282d;
}
.goodsNum{
  margin:0 30rpx;
  overflow: hidden;
}
.goodsNum-btn{
  width: 100%;
  overflow: hidden;
}
.goodsNum-btnItem{
  width: 300rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.goodsNum-btnItem button{
  display: block;
  padding: 0;
  width: 240rpx;
  height: 70rpx;
  text-align: center;
  background: #FFF;
  border-radius: 0px;
  font-weight: bold;
  font-size: 34rpx;
  line-height: 70rpx;
  border: 1px solid #c7c7c7;
}
.goodsNum-btnItem button.disabled{
  background: #f0f0f0;
  color: #999;
}
.goodsNum-btnItem button::after{
  border: none;
}
.goodsNum-btnItem input{
  display: 80rpx;
  height: 66rpx;
  text-align: center;
  font-size: 30rpx;
  border-top: 1px solid #c7c7c7;
  border-bottom: 1px solid #c7c7c7;
}
.goodsBtn{
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.goodsBtn text{
  margin-top: 50rpx;
  display: block;
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
.goodsBtn-add{
  background: #dcb87f;
}
.goodsBtn-buy{
  background: #b4282d;
}
.dialog__mask{
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: rgba(0,0,0,.7);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 200;
}