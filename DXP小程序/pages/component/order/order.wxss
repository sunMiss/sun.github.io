/* pages/component/order/order.wxss */
.order{
  width: 100%;
  overflow: hidden;
  background: #f0f0f0;
}
.order-List{
  overflow: hidden;
  background: #FFF;
  margin-bottom: 20rpx;
}
.order-header{
  padding: 0 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  border-bottom: 1px solid #f0f0f0;
}
.order-header-name,.order-header-type{
  display: block;
  color: #333;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
}
.order-header-type{
  color:#a78c66;
}
.order-center{
  width: 100%;
  overflow: hidden;
}
.order-center-li{
  padding: 20rpx;
  overflow: hidden;
  border-bottom: 1px solid #f0f0f0;
}
.order-center-left{
  width: 160rpx;
  height: 160rpx;
  float: left;
}
.order-center-left image{
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.order-center-right{
  margin-left: 180rpx;
  overflow: hidden;
}
.order-center-box{
  width:100%;
  overflow: hidden;
}
.order-center-name{
  padding-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  font-size: 33rpx;
}
.order-center-small{
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
.order-center-txt{
  padding-right: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.order-center-price,.order-center-num{
  color: #333;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.order-footer{
  padding: 0 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
}
.order-footer-num,.order-footer-price{
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 30rpx;
}
.order-btnItem{
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.order-btn{
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 8rpx;
  background: #FFF;
  border:1px solid #999;
  text-align: center;
  color: #333;
  font-size: 30rpx;
  margin-right: 20rpx;
}
.btn-ok{
  color: #FFF;
  background: #dcb87f;
  border: 1px solid #dcb87f;
}














