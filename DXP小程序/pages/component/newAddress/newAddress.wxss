/* pages/component/newAddress/newAddress.wxss */
.newaddress{
  width: 100%;
  overflow: hidden;
}
.newaddress-list{
  padding: 30rpx;
  overflow: hidden;
}
.newaddress-li{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  vertical-align: middle;
  border-bottom: 1px solid #f5f5f5;
}
.newaddress-li input{
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 30rpx;
}
.newaddress-li icon{
  display:block;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.newaddress-li text{
  display: block;
}
.newaddress-btn{
  margin: 150rpx 30rpx;
  overflow: hidden;
  border-radius: 8rpx;
}
.newaddress-btn button{
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #dcb87f;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}
form{
  display: block;
  width: 100%;
  margin: auto;
}







